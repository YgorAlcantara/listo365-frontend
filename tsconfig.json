{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,

    // Alias config
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // Silencia aviso de depreciação até TS 7
    "ignoreDeprecations": "6.0"
  },
  "include": ["src"]
}
